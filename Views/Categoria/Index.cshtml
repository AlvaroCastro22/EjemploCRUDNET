@model IEnumerable<WebAppBD.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="RegistrarCategoria">Create New</a>
</p>
@if (Model.Count()>0)
{
    <table class="table">
        <thead>
            <tr>
                @* <th>
                     @Html.DisplayNameFor(model => model.Nombre) 
                </th>
                <th></th> *@

                <th>Id</th>
                <th>Nombre Categoria</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td> *@
                   <td>
                       @item.Categoria_Id
                   </td>
                   <td>
                       @item.Nombre
                   </td>
                    
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Categoria_Id">Edit</a> |
                        
                        <a asp-action="Borrar" asp-route-id="@item.Categoria_Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No hay sugerencias</p>
}
